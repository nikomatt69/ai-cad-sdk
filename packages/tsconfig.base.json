{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false
  },
  "exclude": ["node_modules", "dist"]
} 